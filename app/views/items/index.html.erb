<%= render partial: 'as_html', locals: { items: @items } %>

<%= link_to "Add New Face", new_item_path(kind: 'face') %>
<%= link_to "Add Help", new_item_path('item[kind]' => 'Help') %>
<%= link_to "Add Interesting", new_item_path('item[kind]' => 'Interesting') %>

<hr>
<%=  form_tag '/posts', method: 'post' do %>
    <%= label_tag :title, "Post Title:" %>
    <%= text_field_tag 'post[title]', "Standup #{Time.now.strftime("%m/%d/%Y")}:" %>
    <br>
    <%= submit_tag "Create Post With These Items",
                    confirm: "This will remove these items from the board. Are you sure?",
                    id: 'create-post'
    %>
<% end %>

<%= link_to "See previous posts", posts_path %>
