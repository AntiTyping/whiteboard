<% Item::KINDS.each do |kind| %>
  <% if items[kind].present? %>
## <%= kind.pluralize %>

    <% items[kind].each do |item| %>
      <% if item.date.present? %>
### <%= date_label(item) %><%= item.title %>
      <% else %>
### <%= item.title.html_safe %> <%= "(#{item.author})" if include_authors && item.author.present? %>
      <% end %>
    <% if item.description.present? %>

<%= item.description.html_safe %>
<% end %>

<% end %>

<% end %>
<% end %>
