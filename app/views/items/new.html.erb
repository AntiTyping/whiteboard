      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :blogable %><br />
      <%= f.check_box :blogable %>
    </div>
    <div class="field">
      <%=  f.label :kind %>
      <%=  f.select :kind, Item::KINDS %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>