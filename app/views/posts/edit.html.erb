<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="errorExplanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited
        this item from being saved:</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :from %><br />
    <%= f.text_field :from %>
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= render partial: 'items/as_html', locals: { items: @post.items_by_type } %>

<%= link_to "Add New Face", new_post_item_path(@post, kind: 'face') %>
<%= link_to "Add Help", new_post_item_path(@post, 'item[kind]' => 'Help') %>
<%= link_to "Add Interesting", new_post_item_path(@post, 'item[kind]' => 'Interesting') %>

<hr>
EMAIL:

<div class='email_post'>
  <pre>
Subject: <%= @post.title %>
From: <%= @post.from %>

<%=  render partial: 'items/as_markdown', locals: { items: @post.items_by_type } %>
  </pre>
</div>

<% if @post.sent_at %>
  This email was sent at <%=  @post.sent_at %>
<% else %>
  <%= link_to 'Send Email', send_email_post_path(@post), :confirm => 'Emails can not be unsent.  Are you sure?',
              :method => :put %>
<% end %>

<hr>
BLOG POST:

<div class='blog_post'>
  (Title: <%= @post.title %>)

  <pre>
<%=  render partial: 'items/as_markdown', locals: { items: @post.public_items_by_type } %>
  </pre>
</div>

<% if @post.blogged_at %>
  This entry was posted at <%=  @post.blogged_at %>
<% else %>
  <%= link_to 'Post Blog Entry', post_to_blog_post_path(@post),
              :confirm => 'This will post to wordpress.  Are you sure?',
              :method => :put %>
<% end %>